{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-schema.org/draft/2020-12/output/schema",
  "type": "object",
  "headline": "Invoice",
  "title": "Using consts: ${v:API}",
  "properties": {

    "id": {
      "type": "number",
      "title": "Id",
      "render": {
        "method": "input",
        "attributes": [
          {
            "name": "id"
          },
          {
            "type": "number"
          },
          {
            "disabled": "disabled"
          },
          {
            "required": "required"
          }
        ]
      }
    },

    "customer_id": {
      "type": "number",
      "title": "Customer",
      "render": {
        "label": "${first_name} ${last_name} (${email})",
        "method": "select",
        "options": "customer",
        "value": "id",
        "attributes": [
          {
            "name": "customer_id"
          },
          {
            "disabled": "disabled"
          }
        ]
      }
    },

    "invoice_address_id": {
      "title": "Invoice",
      "type": "number",
      "render": {
        "label": "${street_address} — ${postal_code} ${city}",
        "method": "select",
        "options": "addresses",
        "value": "address_id"
      }
    },

    "shipping_address_id": {
      "title": "Shipping",
      "type": "number",
      "render": {
        "label": "${street_address} — ${postal_code} ${city}",
        "method": "select",
        "options": "addresses",
        "value": "address_id"
      }
    },

    "subscriptions": {
      "title": "Subscriptions",
      "type": "array",
      "render": {
        "action": {
          "handler": "add-subscriptions",
          "label": "${t:insert}"
        },
        "group": "insert",
        "label": "date",
        "method": "select",
        "options": "subscriptions",
        "selectedOption": {
          "value": "-1",
          "label": "Choose a subscription"
        },
        "selectedOptionDisabled": true,
        "value": "id"
      }
    },

    "channel_id": {
      "type": "number",
      "title": "Channel Id"
    },

    "subtotal": {
      "type": [
        "number",
        "null"
      ],
      "title": "Subtotal",
      "render": {
        "method": "input",
        "attributes": [
          {
            "class": "fw-700 ta-end",
            "name": "subtotal",
            "readonly": "readonly"
          }
        ],
        "formatter": "${d:formatNumber subtotal}",
        "group": "financial_summary"
      }
    },
    "discount": {
      "type": "number",
      "title": "Discount",
      "render": {
        "method": "input",
        "attributes": [
          {
            "class": "fw-700 ta-end c-error",
            "name": "discount"
          }
        ],
        "formatter": "${d:formatNumber discount}",
        "group": "financial_summary"
      }
    },
    "shipping_costs": {
      "type": "number",
      "title": "Shipping",
      "render": {
        "method": "input",
        "attributes": [
          {
            "class": "fw-700 ta-end",
            "name": "shipping_costs"
          }
        ],
        "formatter": "${d:formatNumber shipping_costs}",
        "group": "financial_summary"
      }
    },
    "vat": {
      "type": "number",
      "title": "Vat",
      "render": {
        "method": "input",
        "attributes": [
          {
            "class": "fw-700 ta-end",
            "name": "vat",
            "readonly": "readonly"
          }
        ],
        
        "group": "financial_summary"
      }
    },
    "total": {
      "type": [
        "number",
        "null"
      ],
      "title": "Total",
      "render": {
        "method": "input",
        "attributes": [
          {
            "class": "fw-700 ta-end",
            "name": "total",
            "readonly": "readonly"
          }
        ],
        "formatter": "${d:formatNumber total}",
        "group": "financial_summary"
      }
    },

    "created_at": {
      "type": "string",
      "title": "Created At",
      "render": {
        "method": "input",
        "attributes": [
          {
            "name": "created_at"
          },
          {
            "type": "datetime-local"
          },
          {
            "disabled": "disabled"
          }
        ],
        "group": "created"
      }
    },

    "last_modified_at": {
      "type": "string",
      "title": "Last Modified At",
      "render": {
        "method": "input",
        "attributes": [
          {
            "name": "last_modified_at"
          },
          {
            "type": "datetime-local"
          },
          {
            "disabled": "disabled"
          }
        ],
        "group": "created"
      }
    },

    "discounts": {
      "type": "array",
      "title": "Discounts",
      "items": {
        "type": "object",
        "properties": {}
      },
      "render": {
        "method": "array-details",
        "attributes": [
          {
            "part": "array-details"
          }
        ]
      }
    },


    "statuses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "number",
            "title": "Order Id",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "order_id"
                },
                {
                  "type": "number"
                },
                {
                  "disabled": "disabled"
                }
              ]
            }
          },
          "status_name": {
            "type": "string",
            "title": "Status Name",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "status_name"
                },
                {
                  "disabled": "disabled"
                }
              ]
            }
          },
          "status_time": {
            "type": "string",
            "title": "Status Time",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "status_time"
                },
                {
                  "type": "datetime-local"
                },
                {
                  "disabled": "disabled"
                }
              ]
            }
          },
          "comment": {
            "type": "string",
            "title": "Comment",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "comment"
                },
                {
                  "placeholder": "Enter comment"
                }
              ]
            }
          }
        }
      },
      "render": {
        "method": "array-units",
        "attributes": [
          {
            "part": "array-units"
          }
        ],
        "add": true,
        "addMethod": "arrayUnit",
        "arrayControl": "immediate-remove",
        "group": "status",
        "label": "${status_time}",
        "value": "status_name"
      }
    },


    "products": {
      "type": "array",
      "title": "Products",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "number",
            "title": "Product Id",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "product_id"
                },
                {
                  "type": "number"
                },
                {
                  "required": "required"
                }
              ]
            }
          },
          "price": {
            "type": "number",
            "title": "Price",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "price"
                }
              ]
            }
          },
          "quantity": {
            "type": "number",
            "title": "Quantity",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "min": 1
                },
                {
                  "name": "quantity"
                },
                {
                  "type": "number"
                }
              ]
            }
          },
          "name": {
            "type": "string",
            "title": "Name",
            "render": {
              "method": "input",
              "attributes": [
                {
                  "name": "name"
                },
                {
                  "disabled": "disabled"
                }
              ]
            }
          }
        }
      },
      "render": {
        "method": "array-units",
        "attributes": [
          {
            "part": "array-units"
          }
        ],
        "add": true,
        "addMethod": "arrayUnit",
        "arrayControl": "immediate-remove",
        "delete": true,
        "label": "${name}|${d:formatNumber price}|${d:multiply quantity price}",
        "value": "quantity"
      }
    },

    "insert": {
      "title": "Insert"
    },

    "financial_summary": {
      "title": "Financial Summary"
    },

    "created": {
      "title": "Created"
    },

    "status": {
      "title": "Statuses"
    }

   
  },

  "required": [
    "addresses",
    "channel_id",
    "created_at",
    "customer_id",
    "customer",
    "discount",
    "discounts",
    "id",
    "invoice_address_id",
    "last_modified_at",
    "order_type_id",
    "products",
    "shipping_address_id",
    "shipping_costs",
    "statuses",
    "subscriptions",
    "subtotal",
    "total",
    "vat"
  ],

  "form": {
    "action": "/api/manage-order/:id",
    "method": "POST",
    "enctype": "application/json",
    "buttons": [
      {
        "label": "${t:update}",
        "type": "submit"
      }
    ]
  }
}