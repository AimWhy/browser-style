{
  "description": "Content card specific layout configuration - optimized subset of main layout system",
  "systems": [
    {
      "fileName": "layout.css",
      "path": "layouts",
      "layer": "layout",
      "element": "lay-out",
      "generateHTML": true,
      "core": ["base"],
      "common": ["animations"],
      "breakpoints": {
        "xs": {
          "type": "@media",
          "min": "240px",
          "max": null,
          "layouts": ["autofit"]
        },
        "sm": {
          "type": "@media",
          "min": "380px",
          "max": null,
          "layouts": [
            "autofit", 
            {
              "columns": ["columns(2)"],
              "grid": ["grid(3a)"],
              "mosaic": ["mosaic(photo)"]
            }
          ]
        },
        "md": {
          "type": "@media",
          "min": "540px",
          "max": null,
          "layouts": ["columns", 
            "grid", 
            {
              "grid": ["grid(3a)"]
            }
          ]
        },
        "lg": {
          "type": "@media",
          "min": "720px",
          "max": null,
          "layouts": ["asymmetrical", "bento", "columns", "grid", "ratios"]
        },
        "xl": {
          "type": "@media",
          "min": "920px",
          "max": null,
          "layouts": [
            {
              "bento": ["bento(6a)"],
              "mosaic": ["mosaic(scatter)", "mosaic(hex)", "mosaic(pinwheel)", "mosaic(cornerstone)"]
            }
          ]
        },
        "xxl": {
          "type": "@media",
          "min": "1140px",
          "max": null,
          "layouts": [{ "bento": ["bento(6a)"] }]
        }
      }
    }
  ],
  "settings": {
    "defaultSrcsetBreakpoints": [280, 480, 900],
    "fallbackSrcset": "default:100vw",
    "layoutDataPath": "/ui/layout/systems/layouts/"
  }
}