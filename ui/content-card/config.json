{
  "description": "Content card specific layout configuration - optimized subset of main layout system",
  "systems": [
    {
      "fileName": "layout.css",
      "path": "layouts",
      "layer": "layout",
      "element": "lay-out",
      "generateHTML": false,
      "core": ["base"],
      "common": [],
      "layoutContainer": {
        "layoutRootElement": "body",
        "maxLayoutWidth": {
          "value": "1024px",
          "cssProperty": "--layout-bleed-mw"
        },
        "layoutMargin": {
          "value": "1rem", 
          "cssProperty": "--layout-mi"
        },
        "widthTokens": {
          "xs": { "value": "20rem", "cssProperty": "--layout-width-xs" },
          "sm": { "value": "30rem", "cssProperty": "--layout-width-sm" },
          "md": { "value": "48rem", "cssProperty": "--layout-width-md" },
          "lg": { "value": "64rem", "cssProperty": "--layout-width-lg" },
          "xl": { "value": "80rem", "cssProperty": "--layout-width-xl" },
          "xxl": { "value": "96rem", "cssProperty": "--layout-width-xxl" }
        }
      },
      "breakpoints": {
        "xs": {
          "type": "@media",
          "min": "240px",
          "max": null,
          "layouts": []
        },
        "sm": {
          "type": "@media",
          "min": "380px",
          "max": null,
          "layouts": []
        },
        "md": {
          "type": "@media",
          "min": "540px",
          "max": null,
          "layouts": [
            {
              "columns": ["columns(2)"]
            }
          ]
        },
        "lg": {
          "type": "@media",
          "min": "720px",
          "max": null,
          "layouts": [
            {
              "columns": ["columns(3)", "columns(4)"],
              "grid": ["grid(3c)", "grid(6a)"],
              "bento": ["bento(4a)"],
              "ratios": ["ratio(66:33)"]
            }
          ]
        },
        "xl": {
          "type": "@media",
          "min": "920px",
          "max": null,
          "layouts": []
        },
        "xxl": {
          "type": "@media",
          "min": "1140px",
          "max": null,
          "layouts": []
        }
      }
    }
  ],
  "settings": {
    "defaultSrcsetBreakpoints": [240, 320, 480, 720, 1200],
    "fallbackSrcset": "default:100vw",
    "layoutDataPath": "/ui/layout/systems/layouts/",
    "highPriority": [0, 1]
  },
  "imageTransforms": {
    "defaultProvider": "cloudflare",
    "providers": {
      "cloudflare": {
        "provider": "cloudflare",
        "urlPattern": {
          "type": "path",
          "pathConfig": {
            "prefix": "/cdn-cgi/image/",
            "separator": ",",
            "assignment": "=",
            "position": "before-path"
          }
        },
        "paramMap": {
          "width": "width",
          "height": "height",
          "quality": "quality",
          "format": "format",
          "fit": "fit",
          "gravity": "gravity",
          "dpr": "dpr"
        }
      }
    },
    "aspectRatio": {
      "enabled": true,
      "source": "layout-attribute",
      "fallback": "ar16x9",
      "default": "ar16x9",
      "calculations": {
        "none": { "calculate": "none" },
        "ar1x1": { "ratio": 1, "calculate": "square" },
        "ar16x9": { "ratio": 1.777777, "calculate": "height-from-width" },
        "ar21x9": { "ratio": 2.333333, "calculate": "height-from-width" },
        "ar4x3": { "ratio": 1.333333, "calculate": "height-from-width" },
        "ar3x2": { "ratio": 1.5, "calculate": "height-from-width" },
        "ar5x4": { "ratio": 1.25, "calculate": "height-from-width" },
        "ar9x16": { "ratio": 0.5625, "calculate": "height-from-width" },
        "ar3x4": { "ratio": 0.75, "calculate": "height-from-width" },
        "ar2x3": { "ratio": 0.666667, "calculate": "height-from-width" },
        "ar4x5": { "ratio": 0.8, "calculate": "height-from-width" },
        "ar9x21": { "ratio": 0.428571, "calculate": "height-from-width" }
      }
    },
    "defaultTransforms": {
      "format": "avif",
      "quality": 80,
      "fit": "cover"
    },
    "responsive": {
      "xs": { "quality": 65, "format": "webp" },
      "sm": { "quality": 70 },
      "md": { "quality": 75 },
      "lg": { "quality": 80 },
      "xl": { "quality": 80 },
      "xxl": { "quality": 85 }
    },
    "contextTransforms": {
      "avatar": {
        "dpr": 2,
        "quality": 85
      }
    }
  }
}