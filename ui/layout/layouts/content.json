{
  "name": "Content Layouts",
  "desc": "These layouts are for <strong>item-card</strong> content components using container queries.<br>Layouts adapt based on container size rather than viewport.",
  "groups": {
    "stack": {
      "prefix": "stack",
      "description": "Stacked layouts with text overlaid on images",
      "layouts": [
        {
          "id": "t-l",
          "description": "Stack with text positioned top-left",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "start start",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "t-c",
          "description": "Stack with text positioned top-center",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "start center",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "t-r",
          "description": "Stack with text positioned top-right",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "start end",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "c-l",
          "description": "Stack with text positioned center-left",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "center start",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "c-c",
          "description": "Stack with text positioned center-center",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "center center",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "c-r",
          "description": "Stack with text positioned center-right",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "center end",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "b-l",
          "description": "Stack with text positioned bottom-left",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "end start",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "b-c",
          "description": "Stack with text positioned bottom-center",
          "columns": "1fr",
          "rows": "1fr",
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "end center",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        },
        {
          "id": "b-r",
          "description": "Stack with text positioned bottom-right",
          "columns": "1fr",
          "rows": "1fr",
          "items": 2,
          "repeatable": false,
          "rules": [
            { "selector": "root", "properties":
              {
                "--item-card-article-c": "#FFF",
                "--item-card-article-ps": "end end",
                "--item-card-ga": "1 / 1",
                "--item-card-overlay": "block"
              }
            }
          ]
        }
      ]
    },
    "columns": {
      "prefix": "columns",
      "description": "Side-by-side column layouts",
      "layouts": [
        {
          "id": "l-r",
          "description": "Two columns with image left, text right",
          "columns": "1fr 1fr",
          "rows": "auto",
          "items": 2,
          "repeatable": false,
          "rules": [
            { "selector": "item-card", "properties": { "--item-card-gtc": "1fr 1fr" } }
          ]
        },
        {
          "id": "r-l",
          "description": "Two columns with image right, text left",
          "columns": "1fr 1fr",
          "rows": "auto",
          "items": 2,
          "repeatable": false,
          "rules": [
            { "selector": "item-card", "properties": { "--item-card-gtc": "1fr 1fr" } },
            { "selector": "article", "properties": { "order": "-1", "reading-order": "-1" } }
          ]
        }
      ]
    },
    "rows": {
      "prefix": "rows",
      "description": "Stacked row layouts",
      "layouts": [
        {
          "id": "t-b",
          "description": "Two rows with image top, text bottom",
          "columns": "1fr",
          "rows": "1fr 1fr",
          "items": 2,
          "repeatable": false,
          "rules": [
            { "selector": "item-card", "properties": { "--item-card-gtc": "1fr", "--item-card-gtr": "1fr 1fr" } }
          ]
        },
        {
          "id": "b-t",
          "description": "Two rows with image bottom, text top",
          "columns": "1fr",
          "rows": "1fr 1fr",
          "items": 2,
          "repeatable": false,
          "rules": [
            { "selector": "item-card", "properties": { "--item-card-gtc": "1fr", "--item-card-gtr": "1fr 1fr" } },
            { "selector": "article", "properties": { "order": "-1", "reading-order": "-1" } }
          ]
        }
      ]
    },
    "content": {
      "prefix": "content",
      "description": "Content-only layouts",
      "layouts": [
        {
          "id": "image",
          "description": "Image only (hide text)",
          "columns": "1fr",
          "rows": "auto",
          "items": 1,
          "repeatable": false,
          "rules": [
            { "selector": "article", "properties": { "display": "none" } }
          ]
        },
        {
          "id": "text",
          "description": "Text only (hide image)",
          "columns": "1fr",
          "rows": "auto",
          "items": 1,
          "repeatable": false,
          "rules": [
            { "selector": "figure", "properties": { "display": "none" } }
          ]
        }
      ]
    }
  }
}
