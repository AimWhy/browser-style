{
  "name": "Grid Layouts",
  "prefix": "grid",
  "layouts": [
    {
      "id": "2sm:1lg-h",
      "description": "2 small items in top row and 1 large item spanning horizontally at bottom",
      "columns": "1fr 1fr",
      "items": 3,
      "repeatable": true,
      "rules": [
        { "selector": "*:nth-of-type(3n+3)", "properties": { "--layout-ga": "auto / span 2" } }
      ]
    },
    {
      "id": "1lg-h:2sm",
