{
  "name": "@browser.style/layout",
  "version": "1.0.7",
  "description": "Modern CSS layout system with responsive grid patterns, container queries, and configurable builds",
  "type": "module",
  "style": "index.css",
  "scripts": {
    "build": "node build-css.js",
    "build:min": "node build-css.js --minify",
    "build:watch": "node build-css.js --watch",
    "dev": "npm run build:watch",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": "./index.css",
    "./style": "./index.css", 
    "./index.css": "./index.css",
    "./layout": "./layout.css",
    "./layout.css": "./layout.css",
    "./layout.min": "./layout.min.css",
    "./layout.min.css": "./layout.min.css",
    "./config": "./config.json",
    "./config.json": "./config.json",
    "./build": "./build/",
    "./build/*": "./build/*",
    "./build-css": "./build-css.js",
    "./builder": "./build-css.js"
  },
  "files": [
    "index.css",
    "layout.css",
    "layout.min.css",
    "css/",
    "modules/",
    "build/",
    "build/*.json",
    "config.json",
    "build-css.js",
    "BUILD.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "browser.style",
    "web-components",
    "layout",
    "css-grid",
    "responsive-design",
    "container-queries",
    "media-queries",
    "css-framework",
    "grid-layouts",
    "bento-grids"
  ],
  "author": "Mads Stoumann",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madsstoumann/browser-style.git",
    "directory": "ui/layout"
  },
  "bugs": {
    "url": "https://github.com/madsstoumann/browser-style/issues"
  },
  "homepage": "https://browser.style/ui/layout"
}
