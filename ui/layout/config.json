{
  "breakpoints": {
    "xs": {
      "type": "@media",
      "min": "240px",
      "max": null,
      "layouts": ["autofit"]
    },
    "sm": {
      "type": "@media",
      "min": "380px",
      "max": null,
      "layouts": [
				"autofit", 
				{
					"columns": ["columns(2)"],
          "grid": ["grid(3a)"],
          "mosaic": ["mosaic(photo)"]
				}
        
			]
    },
    "md": {
      "type": "@media",
      "min": "540px",
      "max": null,
      "layouts": ["autofit", "asymmetrical", "bento", "columns", "grid", "mosaic", "ratios"]
    },
    "lg": {
      "type": "@media",
      "min": "720px",
      "max": null,
      "layouts": ["autofit", "asymmetrical", "bento", "columns", "grid", "mosaic", "ratios"]
    },
    "xl": {
      "type": "@media",
      "min": "920px",
      "max": null,
      "layouts": ["autofit", "asymmetrical", "grid", "bento", "columns", "ratios", "mosaic"]
    },
    "xxl": {
      "type": "@media",
      "min": "1140px",
      "max": null,
      "layouts": ["autofit", "asymmetrical", "grid", "bento", "columns", "ratios"]
    }
  },
  "core": ["base"],
  "common": ["animations", "content", "demo"]
}