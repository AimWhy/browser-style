{
  "breakpoints": [
    { "prefix": "xs", "minWidth": "240px" },
    { "prefix": "sm", "minWidth": "380px" },
    { "prefix": "md", "minWidth": "540px" },
    { "prefix": "lg", "minWidth": "720px" },
    { "prefix": "xl", "minWidth": "920px" },
    { "prefix": "xxl", "minWidth": "1140px" }
  ],
  "layouts": [
    {
      "name": "autofill",
      "value": {
        "--layout-gtc": "repeat(auto-fill, minmax(min(10rem, 100%), 1fr))"
      }
    },
    {
      "name": "columns(2)",
      "value": {
        "--layout-gtc": "1fr 1fr",
        "--_ga": "auto"
      }
    },
    {
      "name": "columns(3)",
      "value": {
        "--layout-gtc": "repeat(3, 1fr)",
        "--_ga": "auto"
      }
    },
    {
      "name": "columns(4)",
      "value": {
        "--layout-gtc": "repeat(4, 1fr)",
        "--_ga": "auto"
      }
    },
    {
      "name": "columns(5)",
      "value": {
        "--layout-gtc": "repeat(5, 1fr)",
        "--_ga": "auto"
      }
    },
    {
      "name": "columns(6)",
      "value": {
        "--layout-gtc": "repeat(6, 1fr)",
        "--_ga": "auto"
      }
    },
    {
      "name": "ratio(25:75)",
      "value": {
        "--layout-gtc": "1fr 3fr"
      }
    },
    {
      "name": "ratio(75:25)",
      "value": {
        "--layout-gtc": "3fr 1fr"
      }
    },
    {
      "name": "ratio(33:66)",
      "value": {
        "--layout-gtc": "1fr 2fr"
      }
    },
    {
      "name": "ratio(66:33)",
      "value": {
        "--layout-gtc": "2fr 1fr"
      }
    },
    {
      "name": "ratio(40:60)",
      "value": {
        "--layout-gtc": "2fr 3fr"
      }
    },
    {
      "name": "ratio(60:40)",
      "value": {
        "--layout-gtc": "3fr 2fr"
      }
    },
    {
      "name": "ratio(25:25:50)",
      "value": {
        "--layout-gtc": "1fr 1fr 2fr",
        "--_ga": "auto"
      }
    },
    {
      "name": "ratio(25:50:25)",
      "value": {
        "--layout-gtc": "1fr 2fr 1fr"
      }
    },
    {
      "name": "ratio(50:25:25)",
      "value": {
        "--layout-gtc": "2fr 1fr 1fr"
      }
    },
    {
      "name": "ratio(50:50:100)",
      "value": {
        "--layout-gtc": "1fr 1fr"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(3n+3)",
          "value": {
            "--layout-ga": "auto / span 2"
          }
        }
      ]
    },
    {
      "name": "ratio(100:50:50)",
      "value": {
        "--layout-gtc": "1fr 1fr"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(3n+1)",
          "value": {
            "--layout-ga": "auto / span 2"
          }
        }
      ]
    },
    {
      "name": "ratio(50x4:100)",
      "value": {
        "--layout-gtc": "1fr 1fr"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(5n+5)",
          "value": {
            "--layout-ga": "auto / span 2"
          }
        }
      ]
    },
    {
      "name": "masonry(1-2)",
      "value": {
        "--layout-gtc": "2fr 1fr"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(3n+1)",
          "value": {
            "--layout-ga": "span 2 / auto"
          }
        }
      ]
    },
    {
      "name": "masonry(2-1)",
      "value": {
        "--layout-gtc": "1fr 2fr"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(3n+2)",
          "value": {
            "--layout-ga": "span 2 / auto"
          }
        }
      ]
    },
    {
      "name": "asym(left-right)",
      "value": {
        "--layout-gtc": "repeat(8, 1fr)"
      },
      "rules": [
        {
          "selector": "*:nth-of-type(n+3)",
          "value": {
            "display": "none"
          }
        },
        {
          "selector": "*:nth-of-type(1)",
          "value": {
            "--layout-ga": "1 / 1 / 7 / 7"
          }
        },
        {
          "selector": "*:nth-of-type(2)",
          "value": {
            "--layout-ga": "3 / 5 / 5 / 9"
          }
        }
      ]
    }
  ]
}
