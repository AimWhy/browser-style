{
  "name": "Asymmetrical Layouts",
  "prefix": "asym",
  "layouts": [
    {
      "id": "left-right",
      "description": "Asymmetrical Left Right",
      "columns": "repeat(8, 1fr)",
      "items": 2,
      "repeatable": false,
      "rules": [
        { "selector": "*:nth-of-type(1)", "properties": { "--layout-ga": "1 / 1 / 7 / 7" } },
        { "selector": "*:nth-of-type(2)", "properties": { "--layout-ga": "3 / 5 / 5 / 9" } },
        { "selector": "*:nth-of-type(n+3)", "properties": { "display": "none" } }
      ]
    },
    {
      "id": "right-left",
      "description": "Asymmetrical Right Left",
      "columns": "repeat(8, 1fr)",
      "items": 2,
      "repeatable": false,
      "rules": [
        { "selector": "*:nth-of-type(1)", "properties": { "--layout-ga": "1 / 3 / 7 / 9" } },
        { "selector": "*:nth-of-type(2)", "properties": { "--layout-ga": "3 / 1 / 5 / 5" } },
        { "selector": "*:nth-of-type(n+3)", "properties": { "display": "none" } }
      ]
    },
    {
      "id": "top-bottom",
      "description": "Asymmetrical Top Bottom",
      "columns": "repeat(8, 1fr)",
      "items": 2,
      "repeatable": false,
      "rules": [
        { "selector": "*:nth-of-type(1)", "properties": { "--layout-ga": "1 / 1 / 5 / 9" } },
        { "selector": "*:nth-of-type(2)", "properties": { "--layout-ga": "3 / 2 / 6 / 8" } },
        { "selector": "*:nth-of-type(n+3)", "properties": { "display": "none" } }
      ]
    },
    {
      "id": "top-left-bottom-right",
      "description": "Asymmetrical Top Left > Bottom Right",
      "columns": "repeat(7, 1fr)",
      "items": 3,
      "repeatable": false,
      "rules": [
        { "selector": "*:nth-of-type(1)", "properties": { "--layout-ga": "1 / 1 / 3 / 4" } },
        { "selector": "*:nth-of-type(2)", "properties": { "--layout-ga": "2 / 3 / 4 / 6" } },
        { "selector": "*:nth-of-type(3)", "properties": { "--layout-ga": "3 / 5 / 5 / 8" } },
        { "selector": "*:nth-of-type(n+4)", "properties": { "display": "none" } }
      ]
    },
    {
      "id": "bottom-left-top-right",
      "description": "Asymmetrical Bottom Left > Top Right",
      "columns": "repeat(7, 1fr)",
      "items": 3,
      "repeatable": false,
      "rules": [
        { "selector": "*:nth-of-type(1)", "properties": { "--layout-ga": "3 / 1 / 5 / 4" } },
        { "selector": "*:nth-of-type(2)", "properties": { "--layout-ga": "2 / 3 / 4 / 6" } },
        { "selector": "*:nth-of-type(3)", "properties": { "--layout-ga": "1 / 5 / 3 / 8" } },
        { "selector": "*:nth-of-type(n+4)", "properties": { "display": "none" } }
      ]
    }
  ]
}
