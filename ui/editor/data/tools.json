								"attr": {
									"data-click": "dom-prev",
									"title": "Move previous ⇧⌃⇞"
								}
							},
							{
								"ui": "button",
								"icon": "rightbar",
								"attr": {
									"data-click": "dom-next",
									"title": "Move next ⇧⌃⇟"
								}
							},
							{
								"ui": "button",
								"icon": "last",
								"attr": {
									"data-click": "dom-last",
									"title": "Move last ⇧⌃↘"
								}
							}
						]
					}
				]
			},
