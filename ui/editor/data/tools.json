							{
								"ui": "textarea",
								"input": {
									"name": "htmlcode",
									"placeholder": "HTML code"
								},
								"textAfter": "DANGER: You can overwrite important content. Syncing will replace the content with the HTML code above."
							},
							{
								"ui": "button",
								"icon": "refresh",
								"attr": {
									"data-click": "sync-html",
									"name": "sync-html",
