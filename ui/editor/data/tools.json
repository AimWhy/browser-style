	{
		"name": "Settings",
		"key": "settings",
		"icon": "settings",
		"title": "Settings ⇧⌃4",
		"groups": [
			{
				"label": "Layout Grid",
				"open": true,
				"fieldsets": [
					{
						"name": "layoutgrid",
						"fields": [
							{
								"textAfter": "Show grid",
								"input": {
									"data-property": "--uie-grid-visible",
									"name": "grid",
									"role": "switch",
									"type": "checkbox"
								}
							},
							{
								"text": "Grid size",
								"input": {
									"data-property": "--uie-grid-sz",
									"data-unit": "px",
									"min": 5,
									"name": "gridsize",
									"type": "range",
									"value": 20
								}
							}
						]
					}
				]
			}
