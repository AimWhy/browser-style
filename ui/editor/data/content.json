[
	{
		"key": "content",
		"ai": [
			{
				"service": "chatgpt",
				"url": "https://api.openai.com/v1/chat/completions",
				"headers"	: {
					"Authorization": "Bearer {{APIKEY}}",
					"Content-Type": "application/json"
				},
				"body": {
					"model": "gpt-4",
					"messages": [
						{
							"role": "assistant",
							"content": "{{PROMPT}}"
						}
					]
				},
				"multiple": "Return the result as JSON",
				"result": "choices[0].message.content"
			}
		],
		"groups": [
			{
				"label": "Content Assistant",
				"name": "content",
				"groups": [
					{
						"label": "Prompts",
						"name": "prompts",
						"open": true,
						"groups": [
							{
								"label": "Translations",
								"fieldsets": [
									{
										"part": "taglist",
										"fields": [
											{
												"ui": "button",
												"attr": {
													"data-click": "ai",
													"data-ai-service": "chatgpt",
													"data-ai-prompt": "Translate this content to French",
													"data-ai-type": "1",
													"title": "French"
												}
											},
											{
												"ui": "button",
												"attr": {
													"data-click": "ai",
													"data-ai-service": "chatgpt",
													"data-ai-prompt": "Translate this content to Spanish",
													"data-ai-type": "2",
													"title": "Spanish"
												}
											},
											{
												"ui": "button",
												"attr": {
													"data-click": "ai",
													"data-ai-service": "chatgpt",
													"data-ai-prompt": "Translate this content to German",
													"data-ai-type": "3",
													"title": "German"
												}
											}
										]
									}
								]
							}
						],
						"fieldsets": [
							{
								"part": "taglist",
								"fields": [
									{
										"ui": "button",
										"attr": {
											"data-click": "ai",
											"data-ai-service": "chatgpt",
											"data-ai-prompt": "Optimize this content for a website",
											"data-ai-type": "4",
											"title": "Optimize for web"
										}
									},
									{
										"ui": "button",
										"attr": {
											"data-click": "ai",
											"data-ai-suggest": "2",
											"data-ai-service": "chatgpt",
											"data-ai-prompt": "Suggest headlin for this content",
											"data-ai-type": "5",
											"title": "Suggest headline"
										}
									}
								]
							}
						]
					},
					{
						"label": "Custom Prompt",
						"name": "prompts",
						"fieldsets": [
							{
								"part": "input-icon",
								"fields": [
									{
										"ui": "textarea",
										"input": {
											"name": "aiprompt",
											"placeholder": ""
										}
									},
									{
										"ui": "button",
										"icon": "inputAI",
										"attr": {
											"data-click": "ai",
											"data-ai-service": "chatgpt",
											"data-ai-prompt": "",
											"title": "Run custom prompt"
										}
									}
								]
							}
						]
					}
				]
			}
		]
	}
]