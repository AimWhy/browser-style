[
	{
		"key": "content",
		"ai": [
			{
				"service": "chatgpt",
				"url": "https://api.openai.com/v1/chat/completions",
				"headers"	: {
					"Authorization": "Bearer {{APIKEY}}",
					"Content-Type": "application/json"
				},
				"body": {
					"model": "gpt-4",
					"messages": [
						{
							"role": "assistant",
							"content": "{{PROMPT}}"
						}
					]
				},
				"result": "choices[0].message.content"
			}
		],
		"groups": [
			{
				"label": "Content Assistant",
				"name": "content",
				"open": true,
				"fieldsets": [
					{
						"part": "taglist",
						"fields": [
							{
								"ui": "button",
								"attr": {
									"data-click": "ai",
									"data-ai-service": "chatgpt",
									"data-ai-prompt": "Optimize this content for a website",
									"title": "Optimize for web"
								}
							},
							{
								"ui": "button",
								"attr": {
									"data-click": "ai",
									"data-ai-service": "chatgpt",
									"data-ai-prompt": "Suggest 5 different titles for this content",
									"title": "Suggest 5 titles"
								}
							},
							{
								"ui": "button",
								"attr": {
									"data-click": "ai",
									"data-ai-service": "chatgpt",
									"data-ai-prompt": "Translate to French",
									"title": "Translate to French"
								}
							}
						]
					}
				]
			}
		]
	}
]