[
	{
		"name": "Components",
		"items": [
			{
				"key": "card",
				"name": "Card",
				"description": "A simple card component with an image, title, and description.",

				"model": {
					"locale": "en-us",
					"uid": "{{INSTANCE}}",
					"_in_progress": true,
					"text": [
						{
							"heading": {
								"text": "HEADING"
							}
						},
						{
							"content": {
								"html": "CONTENT"
							}
						},
						{
							"link": {
								"url": {
									"title": "LINKTITLE",
									"href": "#"
								}
							}
						}
					],
					"title": "{{TITLE}}"
				},
			
				"info": {
					"provider": "contentstack",
					"parts": [
						{
							"edit": "text",
							"key": "text[0].heading.text",
							"part": "h3",
							"styles": ["utility-typography", "utility-spacing", "unit-headlines"]
						},
						{
							"edit": "richtext",
							"key": "text[1].content.html",
							"part": "article > p:first-of-type",
							"styles": ["utility-typography"]
						},
						{
							"part": "article",
							"styles": ["utility-backgrounds", "utility-spacing"]
						},
						{
							"key": "text[2].link.url.title",
							"part": "a",
							"styles": ["utility-typography"]
						}
					]
				},

				"template": "<ui-component key=\"card\"><div><h3>{{heading}}</h3><article><p>{{content}}</p></article></div></ui-component>",
				"config": [
						{
							"key": "heading",
							"type": "text",
							"label": "Title",
							"value": "Headline"
						},
						{
							"key": "content",
							"type": "textarea",
							"label": "Description",
							"value": "Text ..."
						},
						{
							"key": "image",
							"type": "text",
							"label": "Image"
						}
					]
			}
		]
	},
	{
		"name": "Layouts",
		"items": [
			{
				"key": "3col",
				"name": "3-Column Grid",
				"template": "<section><div>1</div><div>2</div><div>3</div></section>"
			},
			{
				"key": "1colslider",
				"name": "Slider",
				"template": "<outer-section>HELLO</outer-section>"

			}
		]
	},
	{
		"name": "Tags",
		"items": [
			{
				"key": "img",
				"description": "HTML Image element. Set the source, alt text, width, and height in configuration below.",
				"name": "Image",
				"template": "<img src=\"{{src}}{{width}}x{{height}}\" alt=\"{{alt}}\" width=\"{{width}}\" height=\"{{height}}\">",
				"config": [
					{
						"key": "src",
						"type": "url",
						"label": "Source",
						"value": "https://source.unsplash.com/random/"
					},
					{
						"key": "alt",
						"type": "text",
						"label": "Alt Text",
						"value": "Placeholder Image"
					},
					{
						"key": "width",
						"type": "number",
						"label": "Width",
						"value": 300
					},
					{
						"key": "height",
						"type": "number",
						"label": "Height",
						"value": 200
					}
				]
			},
			{
				"key": "h1",
				"description": "HTML Section Heading element",
				"name": "H1",
				"template": "<h1>{{h1}}</h1>",
				"config": [
					{
						"key": "h1",
						"type": "text",
						"label": "Text",
						"value": "This is a headline"
					}
				]
			},
			{
				"key": "h2",
				"name": "H2",
				"template": "<h2>Headline</h2>"
			}
		]
	}
]