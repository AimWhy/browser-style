  "ruleEngine": {
    "rateSelectionRules": [
      {
        "id": "band_c_severe",
        "description": "Band C: Severe speeding requiring court prosecution",
        "conditions": [
          {
            "type": "or",
            "rules": [
              { "field": "speedOverAbsolute", "operator": ">=", "value": 21 },
              { "field": "percentageOver", "operator": ">=", "value": 100 }
            ]
          }
        ],
        "result": "bandC"
      },
      {
        "id": "band_b_serious",
        "description": "Band B: Serious speeding requiring court prosecution",
        "conditions": [
          {
            "type": "or",
            "rules": [
              {
                "type": "and",
                "rules": [
                  { "field": "speedOverAbsolute", "operator": ">=", "value": 11 },
                  { "field": "speedOverAbsolute", "operator": "<=", "value": 20 }
                ]
              },
              {
                "type": "and",
                "rules": [
                  { "field": "percentageOver", "operator": ">=", "value": 50 },
                  { "field": "percentageOver", "operator": "<", "value": 100 }
                ]
              }
            ]
          }
        ],
        "result": "bandB"
      },
      {
        "id": "band_a_minor",
        "description": "Band A: Minor speeding - Fixed Penalty Notice",
        "conditions": [
          {
            "type": "and",
            "rules": [
              { "field": "speedOverAbsolute", "operator": "<=", "value": 10 },
              { "field": "percentageOver", "operator": "<", "value": 50 }
            ]
          }
        ],
        "result": "bandA"
      }
    ],
    "penaltyRules": [
      {
        "id": "new_driver_enhanced",
        "description": "Enhanced consequences for new drivers (6+ points = licence revocation)",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "newDriver" },
          { "field": "percentageOver", "operator": ">=", "value": 30 }
        ],
        "penalty": 50
      },
      {
        "id": "school_zone_enhancement",
        "description": "Enhanced penalties near schools",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "schoolZone" },
          { "field": "percentageOver", "operator": ">=", "value": 20 }
        ],
        "penalty": 100
      },
      {
        "id": "commercial_vehicle_enhancement",
        "description": "Enhanced penalties for commercial vehicles",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "commercialVehicle" },
          { "field": "percentageOver", "operator": ">=", "value": 30 }
        ],
        "penalty": 150
      },
      {
        "id": "repeat_offender_enhancement",
        "description": "Enhanced penalties for repeat offenders",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "repeatOffender" },
          { "field": "percentageOver", "operator": ">=", "value": 20 }
        ],
        "penalty": 200
      }
    ],
    "consequenceRules": [
      {
        "id": "totting_up_ban",
        "description": "Totting up ban for 12+ points in 3 years",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "repeatOffender" },
          { "field": "percentageOver", "operator": ">=", "value": 50 }
        ],
        "consequence": "TOTTING_UP_BAN"
      },
      {
        "id": "new_driver_revocation",
        "description": "Licence revocation for new drivers with 6+ points",
        "conditions": [
          { "field": "factors", "operator": "includes", "value": "newDriver" },
          { "field": "percentageOver", "operator": ">=", "value": 50 }
        ],
        "consequence": "LONG_DISQUALIFICATION"
      },
      {
        "id": "severe_speeding_ban",
        "description": "Discretionary disqualification for severe speeding",
        "conditions": [
          { "field": "percentageOver", "operator": ">=", "value": 100 }
        ],
        "consequence": "SHORT_DISQUALIFICATION"
      },
      {
        "id": "court_prosecution_serious",
        "description": "Court prosecution for serious speeding",
        "conditions": [
          { "field": "percentageOver", "operator": ">=", "value": 50 }
        ],
        "consequence": "COURT_PROSECUTION"
      },
      {
        "id": "speed_awareness_option",
        "description": "Speed awareness course option for minor offences",
        "conditions": [
          { "field": "percentageOver", "operator": "<", "value": 50 },
          { "field": "speedOverAbsolute", "operator": "<=", "value": 10 },
          { "field": "factors", "operator": "not_includes", "value": "repeatOffender" }
        ],
        "consequence": "SPEED_AWARENESS_COURSE"
      },
      {
        "id": "points_standard",
        "description": "Standard penalty points for speeding",
        "conditions": [
          { "field": "percentageOver", "operator": ">=", "value": 0 }
        ],
        "consequence": "POINTS_ADDED"
      }
    ]
  },
